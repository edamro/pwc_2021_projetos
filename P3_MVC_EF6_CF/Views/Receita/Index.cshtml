@model IEnumerable<P3_MVC_EF6_CF.Models.Receita>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar um novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.CategoriaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrauDificuldade.GrauDificuldadeNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceitaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceitaDescricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceitaDuracao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrauDificuldade.GrauDificuldadeNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceitaNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceitaDescricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReceitaDuracao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ReceitaID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ReceitaID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.ReceitaID })
        </td>
    </tr>
}

</table>
