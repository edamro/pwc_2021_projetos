@model P3_MVC_EF6_CF.Models.Receita

@{
    ViewBag.Title = "Deletar";
}

<h2>Deletar</h2>
<p class="error">@ViewBag.ErrorMessage</p>
<h3>Tem certeza que deseja deletar este item?</h3>
<div>
    <h4>Receita</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.CategoriaID, "Categoria")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>

        <dt>
            @Html.LabelFor(model => model.GrauDificuldadeID, "Grau de Dificuldade")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GrauDificuldade.GrauDificuldadeNome)
        </dd>

        <dt>
            @Html.LabelFor(model => model.ReceitaID, "Nome da receita")
            <!--@Html.DisplayNameFor(model => model.ReceitaNome)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReceitaNome)
        </dd>

        <dt>
            @Html.LabelFor(model => model.ReceitaID, "Descrição")
            <!--@Html.DisplayNameFor(model => model.ReceitaDescricao)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReceitaDescricao)
        </dd>

        <dt>
            @Html.LabelFor(model => model.ReceitaID, "Duração")
            <!--@Html.DisplayNameFor(model => model.ReceitaDuracao)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReceitaDuracao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista", "Index")
        </div>
    }
</div>
